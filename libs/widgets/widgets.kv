
<AppDrop>:
    size_hint: (None,None)
    height: dp(250)
    width: dp(35)
    md_bg_color: 0.5, 0.5, 0.5, 1
    radius: [0,0,25,25]
    MDFloatLayout:
        size: self.size
        id:dropfloat
        MDIconButton:
            icon:'menu'              
            pos_hint: {'center_x': 0.5,'center_y': 0.85}
            on_press: 
                root.check()
        MDIconButton:
            icon:'home'              
            pos_hint: {'center_x': 0.5,'center_y': 0.52}
            on_press: 
                app.change_screen('home-sc')
                root.check()
        
        MDIconButton:
            icon:'help-circle'              
            pos_hint: {'center_x': 0.5,'center_y': 0.17}
            on_press: 
                root.check()
                app.change_screen('connect-sc')
        
<AppBar@MDBoxLayout>:
    size_hint: (1,None)
    height: dp(35)
    pos_hint: {'center_x': 0.5,'top': 1}
    md_bg_color: 0.5, 0.5, 0.5, 1
    radius: [0,0,15,15]
    spacing: self.width-100
    padding: [5,5,5,5]
    screen:''
    MDIconButton:
        icon:'menu'              
        pos_hint: {'center_x': 0.15,'center_y': 0.5}
        on_press: print(root.screen)
        # style: "tonal"
        # theme_bg_color: "Custom"
        # md_bg_color: 0.5, 0.5, 0.5, 1
        # theme_icon_color: "Custom"
        # icon_color: "white"
    MDIconButton:
        icon:'chat-processing-outline'
        pos_hint: {'center_x': 0.9,'center_y': 0.5}
<MDARLabel>:
    font_name:'assets/fonts/f2.ttf'
    text_language: 'ar'

<Post>:
    # adaptive_height:True
    orientation: 'vertical'
    size_hint: (.95,None)
    height:self.width *0.75
    color: (1,1,1,1)
    price:'3500'
    location:'bany Ease'
    stars:'3.5'
    MDFloatLayout:
        size: root.size
        MDBoxLayout:
            size: root.size
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            orientation: 'vertical'
            MDBoxLayout:
                
                size_hint: (1,0.02)
        
            FitImage:
                source: root.image
                size_hint: (1,.8)
                radius: [25]
            MDBoxLayout:
                size_hint: (1,None)
                height: dp(40)
                MDScrollView:
                    
                    do_scroll_x: True  # تفعيل التمرير الأفقي
                    do_scroll_y: False  # تعطيل التمرير العمودي
                    MDBoxLayout:
                        orientation: 'horizontal'
                        padding: [10,10,10,5]
                        spacing: dp(35)
                        size_hint_x: None
                        adaptive_width: True
                        IconTextButton:
                            icon:'stove'
                            text: '1'
                            on_press: app.PopupfloatNotice(app.wm.screens[0],f'Number of Kitchens:{self.text}',False)
                        IconTextButton:
                            icon:'toilet'
                            text:'1'
                            on_press: app.PopupfloatNotice(app.wm.screens[0],f'Number of Bathrooms:{self.text}',False)
                        IconTextButton:
                            icon:'car'
                            text:'2'
                            on_press: app.PopupfloatNotice(app.wm.screens[0],f'Number of Car Garages:{self.text}',False)
                        IconTextButton:
                            icon:'home'
                            text:'8'
                            on_press: app.PopupfloatNotice(app.wm.screens[0],f'Number of Rooms:{self.text}',False)
                        IconTextButton:
                            icon:'ruler-square'
                            text: '45 mm'
                            on_press: app.PopupfloatNotice(app.wm.screens[0],f'Total Area:{self.text}',False)
                        IconTextButton:
                            icon: 'bed'
                            text: '4'
                            on_press: app.PopupfloatNotice(app.wm.screens[0],f'Number of Beds :{self.text}',False)
        IconTextButton:
            icon:'bitcoin'
            text: root.price
            pos_hint: {'center_x': 0.9,'center_y': 0.9}
            md_bg_color: (0.5, 0.5, 0.5, 0.3)
        IconTextButton:
            icon:'google-maps'
            text: root.location
            pos_hint: {'center_x': 0.23,'center_y': 0.9}
            md_bg_color: (0.5, 0.5, 0.5, 0.3)
        IconTextButton:
            icon:'star'
            text: root.stars
            pos_hint: {'center_x': 0.9,'center_y': 0.2}
            md_bg_color: (0.5, 0.5, 0.5, 0.3) 
<IconTextButton@MDCard>:
    #elevation: .5
    # style: "elevated"
    # theme_shadow_color: "/Custom"
    # color: 1 , 1,.5,1
    md_bg_color: (1,1,1,.3)
    # shadow_color: "red"
    size_hint: (None,None)
    height: dp(30)
    width: (self.minimum_width +icon.width + (text_id.texture_size[0] *2)) /1.7
    padding: [5,5,5,5]
    spacing: 5
    icon:''
    text:''
    MDIcon:
        icon: root.icon
        id:icon
        theme_icon_color: "Custom"
        icon_color: "green"
        
    MDARLabel:
        id:text_id
        text: root.text
        theme_text_color: "Custom"
        text_color: "white"

